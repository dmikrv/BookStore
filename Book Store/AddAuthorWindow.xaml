<Window x:Class="Book_Store.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book_Store"
        xmlns:resx="clr-namespace:Book_Store.Properties"
        mc:Ignorable="d"
        Title="Add author" Height="260" Width="300">
    <StackPanel Margin="10,5,10,5">
        <StackPanel Orientation="Vertical">
            <Label Content="First name*:"/>
            <TextBox x:Name="firstNameText" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Label Content="Last name:"/>
            <TextBox x:Name="lastNameText" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Label Content="Patronymic:"/>
            <TextBox x:Name="patronymicText" Margin="5,0,0,0"/>
        </StackPanel>

        <Button x:Name="addAuthorButton" Content="Add author" Margin="5,15,0,0" Padding="10,4,10,4" HorizontalAlignment="Right" Click="addAuthorButton_Click"></Button>
    </StackPanel>
</Window>
